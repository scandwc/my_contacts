<div class="page-header">
  <h1>
    Employments
    <a href="/employments/new" class="btn btn-lg btn-success">New Employment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "employments_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :company_name_cont, "Company name contains" %>
      <%= f.text_field :company_name_cont, :class => "form-control", :placeholder => "Company name contains" %>
    </div>

<div class="form-group">
      <%= f.label :contact_name_cont, "Contact name contains" %>
      <%= f.text_field :contact_name_cont, :class => "form-control", :placeholder => "Contact name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/employments" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#employments_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Contact</th>
        <th>Actions</th>
      </tr>

      <% @employments.each do |employment| %>
      <tr>
        <td>
          <% if employment.company.present? %>
            <a href="/companies/<%= employment.company.id %>">
              <%= employment.company.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if employment.contact.present? %>
            <a href="/contacts/<%= employment.contact.id %>">
              <%= employment.contact.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/employments/<%= employment.id %>" class="btn btn-primary">Show</a>
          <a href="/employments/<%= employment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_employment/<%= employment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @employments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
