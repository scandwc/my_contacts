<div class="page-header">
  <h1>
    Employments
    <a href="/employments/new" class="btn btn-lg btn-success">New Employment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Contact</th>
        <th>Actions</th>
      </tr>

      <% @employments.each do |employment| %>
      <tr>
        <td>
          <% if employment.company.present? %>
            <a href="/companies/<%= employment.company.id %>">
              <%= employment.company.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if employment.contact.present? %>
            <a href="/contacts/<%= employment.contact.id %>">
              <%= employment.contact.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/employments/<%= employment.id %>" class="btn btn-primary">Show</a>
          <a href="/employments/<%= employment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_employment/<%= employment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @employments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
