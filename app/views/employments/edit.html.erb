<!-- Validation failure messages -->
<% if @employment.errors.any? %>
  <% @employment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Employment #<%= @employment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_employment/<%= @employment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <%= select_tag(:company_id, options_from_collection_for_select(Company.all, :id, :name, @employment.company_id), :class => "form-control") %>
      </div>

      <!-- Label and input for contact_id -->
      <div class="form-group">
        <label for="contact_id" class="control-label">
          Contact
        </label>

        <input type="text" id="contact_id" name="contact_id" placeholder="Contact" class="form-control" value="<%= @employment.contact_id %>">
      </div>

      <button class="btn btn-warning">
        Update Employment
      </button>
      or
      <a href="/employments/<%= @employment.id %>">Cancel</a>
    </form>
  </div>
</div>
